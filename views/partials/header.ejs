    <meta name="msapplication-TileImage" content="/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <title>Burger Stop</title>
</head>
<body>
    <nav class="navbar nav-custom navbar-expand-md navbar-dark">
        <div class="container navbar-container">
            <a href="/" class="navbar-brand">Burger Stop <i class="fas fa-hamburger"></i></a>
            <button class="navbar-toggler border" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon toggler"></span>
            </button> 
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <ul class="navbar-nav navbar-right">
                    <li><a class="list-item nav-item" href="/burgers">Burgers <i class="fas fa-hamburger"></i></a></li>
                    <% if(!currentUser){ %>
                        <li><a class="list-item nav-item" href="/login">Login <i class="fas fa-sign-in-alt"></i></a></li>
                        <li><a class="list-item nav-item" href="/register">Register <i class="fas fa-user-plus"></i></a></li>
                    <% } else { %>
                        <li><a class="list-item nav-item" href="/users/<%= currentUser._id %>">Profile <i class="fas fa-user"></i></a></li>
                        <li><a class="list-item nav-item" href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>
                    <% } %> 
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
    </div>

