<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 form-col reg-col">
            <h1>Register</h1>
            <form action="/register" method="POST" encType="multipart/form-data">
                <div class="form-group">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" placeholder="Your name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="pic" class="form-label">Profile Picture</label>
                    <input type="file" name="image" class="form-control file-control">
                </div>
                <div class="form-group">
                    <label for="bio" class="form-label">Bio</label>
                    <textarea rows="3" name="bio" placeholder="Bio" class="form-control"></textarea>
                </div>
                
                <button class="lg-rg-btn">Register <i class="fas fa-user-plus"></i></button>
            </form> 
        </div>
        <div class="col-md-2"></div>
    </div>
</div>




<% include partials/footer %>