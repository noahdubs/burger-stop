<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 form-col new-bg-col">
            <h1>New burger</h1>
            <form action="/burgers" method="POST" encType="multipart/form-data">
                <div class="form-group">
                    <label for="name" class="form-label">Burger name</label>
                    <input class="form-control" type="text" placeholder="name" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="price" class="form-label">Price</label>
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" class="form-control">
                </div>
                <div class="form-group">
                    <label for="pic" class="form-label">Burger picture</label>
                    <input class="form-control file-control" type="file" placeholder="image url" name="image" class="form-control">
                </div>
                <div class="form-group">
                    <label for="desc" class="form-label">Description</label>
                    <input class="form-control" type="text" placeholder="description" name="description" class="form-control">
                </div>
                <div class="form-group">
                    <label for="rest" class="form-label">Restaurant</label>
                    <input class="form-control" type="text" placeholder="Restaurant" name="restaurant" class="form-control" >
                </div>
                <div class="form-group">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" placeholder="location" name="location" id="location" class="form-control">
                </div>
                <div class="form-group">
                    <label for="location" class="form-label">Rating</label>
                    <input type="hidden" name="stars" id="stars" value="" >
                    <p>
                        <i id="1" class="fas fa-star"></i>
                        <i id="2" class="fas fa-star"></i>
                        <i id="3" class="fas fa-star"></i>
                        <i id="4" class="fas fa-star"></i>
                        <i id="5" class="fas fa-star"></i>
                    </p>
                </div>
                <div class="form-group">
                    <button class="lg-rg-btn">Submit <i class="fas fa-hamburger"></i></button>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<script src="/scripts/stars.js"></script>

<% include ../partials/footer %>