<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Burger Stop!</h1>
            <p>View our hand-picked burgers from all over the world</p>
            <p>
                <a class="btn add-new-btn" href="/burgers/new">Add a new burger</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% burgers.forEach((burger)=>{ %>
            <div class="col-md-3 col-sm-6 burger-col">
                <div class="thumbnail">
                    <a href="/burgers/<%= burger._id %>">
                        <img class="burger-img" src="<%= burger.image %>"> 
                    </a>
                    <div class="caption">
                        <a class="burger-link" href="/burgers/<%= burger._id %>">
                            <h4><%= burger.name %></h4>
                        </a>
                        <a class="burger-link" href="/users/<%= burger.author.id %>">
                            <h5>Made by <%= burger.author.username %></h5>
                        </a>
                    </div>
                </div>
            </div>            
        <% }) %>
    </div>
</div>






<% include ../partials/footer %>

