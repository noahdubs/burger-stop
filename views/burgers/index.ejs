<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Burger Stop!</h1>
            <p>View our hand-picked burgers from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/burgers/new">Click here to add a new burger</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% burgers.forEach((burger)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= burger.image %>"> 
                    <div class="caption">
                        <h4>
                            <%= burger.name %>
                        </h4>
                        <h5>
                           Author: <%= burger.author.username %>
                        </h5>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/burgers/<%= burger._id %>">More Info</a>
                    </p>
                </div>
            </div>            
        <% }) %>
    </div>
</div>






<% include ../partials/footer %>

