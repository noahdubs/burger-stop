<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-7 content-col">
            <div class="row">
                <div class="col-md-7">
                    <h1><%= burger.name %></h1>
                    <img class="burger-page-img" src="<%= burger.image %>">
                </div>
                <div class="col-md-5">
                    <h4 class="pull-right">Price: $<%= burger.price %></h4>
                    <p><%= burger.description %></p>
                    <p class="review-by">Review by 
                        <a href="/users/<%= burger.author._id %>" class="burger-author"> <%= burger.author.username %></a>
                    </p>
                </div>
            </div>
            
        </div>
        <div class="col-5 map-col">
            <div id="map"></div>
        </div>
        <div class="comments">
            <div class="comm-header">
                <h3>Comments</h3>
                <a href="/burgers/<%= burger._id %>/comments/new" class="add-comm-btn">Add new comment</a>
            </div>
            <% burger.comments.forEach((comment)=>{ %> 
                <div class="row com-row">
                    <div class="col-6 com-content">
                       <a class="burger-author com-author" href="/users/<%= comment.author.id %>"><%= comment.author.username %></a>
                       <p><%= comment.text %></p> 
                    </div>
                    <div class="col-6 com-options-col">
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a href="/burgers/<%= burger._id %>/comments/<%= comment._id %>/edit" 
                            class="edit-comm-btn">Edit comment</a>
                            <form action="/burgers/<%= burger._id %>/comments/<%= comment._id %>?_method=DELETE" 
                                method="POST" class="deleteForm">
                                <button class="delete-comm-btn">Delete comment</button>
                            </form>
                       <% } %>
                    </div>
                </div>
            <% }) %> 
        </div>
    </div>
</div>
<script>
    function initMap() {
        var lat = <%= burger.lat %>;
        var lng = <%= burger.lng %>;
        var center = {lat: lat, lng: lng};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 8,
            center: center,
            scrollwheel: false 
        });
        var contentString = `
            <strong><%= burger.name %><br />
            <%= burger.location %></strong>
            <p><%= burger.description %></p>
        `
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map 
        });
        marker.addListener("click", function(){
            infowindow.open(map, marker)
        });
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDe65uJ-u0oRsnx5Zp8edB607o1nr09Wl4&callback=initMap"></script>

<% include ../partials/footer %>