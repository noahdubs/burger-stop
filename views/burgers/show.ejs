<% include ../partials/header %>
<div class="container burger-container">
    <div class="row burger-row">
        <div class="col-7 content-col">
            <div class="row">
                <div class="col-lg-6">
                    <h2><%= burger.name %></h2>
                    <img class="burger-page-img" src="<%= burger.picture.url %>">
                </div>
                <div class="col-lg-6">
                    <h4 class="pull-right">Price: $<%= burger.price %></h4>
                    <p><%= burger.description %></p>
                    <p class="review-by">Review by 
                        <a href="/users/<%= burger.author.id %>" class="burger-author"> <%= burger.author.username %></a>
                    </p>
                    <div class="burg-options">
                        <% if(currentUser && burger.author.id.equals(currentUser._id)){ %>
                            <a class="edit-burg-btn" href="/burgers/<%= burger._id %>/edit">Edit burger <i class="far fa-edit"></i></a>
                            <form class="deleteForm" action="/burgers/<%= burger._id %>?_method=DELETE" method="POST">
                                <button  class="delete-burg-btn">Delete Burger <i class="fas fa-trash"></i></button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-5 map-col">
            <div id="map"></div>
        </div>
        <div class="comments">
            <div class="comm-header">
                <h3>Comments</h3>
            </div>
            <div class="row com-row">
                <% burger.comments.forEach((comment)=>{ %> 
                    <div class="col-6 com-content">
                        <a class="burger-author com-author" href="/users/<%= comment.author.id %>"><%= comment.author.username %></a>
                        <p><%= comment.text %></p> 
                    </div>
                    <div class="col-6 com-options-col">
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a href="/burgers/<%= burger._id %>/comments/<%= comment._id %>/edit" 
                            class="edit-comm-btn">Edit comment <i class="far fa-edit"></i></a>
                            <form action="/burgers/<%= burger._id %>/comments/<%= comment._id %>?_method=DELETE" 
                                method="POST" class="deleteForm">
                                <button class="delete-comm-btn">Delete comment <i class="fas fa-trash"></i></button>
                            </form>
                        <% } %>
                    </div>
                <% }) %> 
            </div>
            <div class="new-comment">
                <h4>New comment</h4>
                <form action="/burgers/<%= burger._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" rows="2" placeholder="Your comment here" name="comment[text]"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="lg-rg-btn">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function initMap() {
        var lat = <%= burger.lat %>;
        var lng = <%= burger.lng %>;
        var center = {lat: lat, lng: lng};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 13,
            center: center,
            scrollwheel: false 
        });
        var contentString = `
            <strong><%= burger.name %><br />
            <%= burger.location %></strong>
            <p><%= burger.description %></p>
        `
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map 
        });
        marker.addListener("click", function(){
            infowindow.open(map, marker)
        });
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= key %>&callback=initMap"></script>

<% include ../partials/footer %>