<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= burger.name %></h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/burgers/<%= burger._id %>?_method=PUT" method="POST">
                <div class="form-group">
                        <input class="form-control" type="text" value="<%= burger.name %>" name="burger[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= burger.price %>" name="burger[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" value="<%= burger.image %>" name="burger[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= burger.description %>" name="burger[description]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="location" name="burger[location]" id="location" 
                        value="<%= burger.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/burgers">Go Back</a> 
        </div>
    </div>
</div>
<% include ../partials/footer %>