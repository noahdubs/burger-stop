<% include ../partials/header %>
    <div class="container">
        <div class="row user-row">
            <div class="col-md-4 img-col">
                <img src="<%= user.picture.url %>" class="user-img">
            </div>
            <div class="col-md-8">
                <h1><%= user.name %></h1>
                <h3>@<%= user.username %></h3>
                <p>Member since <%= user.date %></p>
            </div>
        </div>
        <div class="row user-burgers-row">
            <% user.burgers.forEach(burger=> { %>
                <div class="col-md-3 col-sm-6 burger-col">
                    <div class="thumbnail">
                        <a href="/burgers/<%= burger._id %>">
                            <img class="burger-img" src="<%= burger.picture.url %>"> 
                        </a>
                        <div class="caption">
                            <a class="burger-link" href="/burgers/<%= burger._id %>">
                                <h4><%= burger.name %></h4>
                            </a>
                            <a class="burger-link" href="/users/<%= burger.author.id %>">
                                <h5>Made by <%= burger.author.username %></h5>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>  
    </div>
<% include ../partials/footer %>