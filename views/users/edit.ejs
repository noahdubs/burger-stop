<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 form-col edit-user-col">
            <h1>Edit profile</h1>
            <form action="/users/<%= user._id %>?_method=PUT" method="POST" encType="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" name="name" value="<%= user.name %>" />
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" name="username" value="<%= user.username %>" />
                </div>
                <div class="form-group">
                    <label for="pic">Picture</label>
                    <input type="file" class="form-control file-control" name="image" value="<%= user.pic %>" />
                </div>
                <div class="form-group">
                    <label for="username">Bio</label>
                    <textarea rows="3" class="form-control" name="bio"><%= user.bio %></textarea>
                </div>
                <button class="lg-rg-btn">Submit <i class="far fa-edit"></i></button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<% include ../partials/footer %>
